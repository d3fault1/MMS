                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Path x:Name="Path" Margin="0 0 0 0" Stretch="Uniform" Height="10" Width="6" HorizontalAlignment="Center" VerticalAlignment="Center" StrokeThickness="0.5"
                  Data="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z" Fill="{TemplateBinding Foreground}" Stroke="{TemplateBinding Foreground}"/>
        </Border>
