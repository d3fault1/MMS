<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="MMSCalendarDayButton" TargetType="{x:Type CalendarDayButton}">
        <Setter Property="MinWidth" Value="5" />
        <Setter Property="MinHeight" Value="5" />
        <Setter Property="FontSize" Value="{StaticResource Small}" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource BrushTransparentMain}"/>
        <Setter Property="Background" Value="{StaticResource BrushTransparentMain}"/>
        <Setter Property="Foreground" Value="{StaticResource BrushSecondaryAux4}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CalendarDayButton">
                    <Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup Name="CommonStates">
                                <VisualState Name="Normal">
                                    <Storyboard>
                                        <ColorAnimation Duration="{StaticResource DurationFadeOut}"
                                                        To="{TemplateBinding Background}"
                                                        Storyboard.TargetName="HighlightBackground"
                                                        Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)"/>
                                        <ColorAnimation Duration="{StaticResource DurationFadeOut}"
                                                        To="{TemplateBinding Foreground}"
                                                        Storyboard.TargetName="NormalText"
                                                        Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState Name="MouseOver">
                                    <Storyboard>
                                        <ColorAnimation Duration="{StaticResource DurationFadeIn}"
                                                        To="{StaticResource ColorSecondaryAux4}"
                                                        Storyboard.TargetName="HighlightBackground"
                                                        Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)"/>
                                        <ColorAnimation Duration="{StaticResource DurationFadeIn}"
                                                        To="{StaticResource ColorFontMain}"
                                                        Storyboard.TargetName="NormalText"
                                                        Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState Name="Pressed"/>
                                <VisualState Name="Disabled">
                                    <Storyboard>
                                        <ColorAnimation Duration="0"
                                                        To="{StaticResource ColorDisabledMain}"
                                                        Storyboard.TargetName="HighlightBackground"
                                                        Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)"/>
                                        <ColorAnimation Duration="0"
                                                        To="{StaticResource ColorFontTer}"
                                                        Storyboard.TargetName="NormalText"
                                                        Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup Name="SelectionStates">
                                <VisualState Name="Unselected" />
                                <VisualState Name="Selected">
                                    <Storyboard>
                                        <ColorAnimation Duration="0"
                                                        To="{StaticResource ColorSecondaryAux3}"
                                                        Storyboard.TargetName="SelectedBackground"
                                                        Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)"/>
                                        <ColorAnimation Duration="0"
                                                        To="{TemplateBinding Foreground}"
                                                        Storyboard.TargetName="NormalText"
                                                        Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup Name="CalendarButtonFocusStates">
                                <VisualState Name="CalendarButtonFocused">
                                    <Storyboard>
                                        <ColorAnimation Duration="0"
                                                        To="{StaticResource ColorSecondaryAux4}"
                                                        Storyboard.TargetName="DayButtonFocusVisual"
                                                        Storyboard.TargetProperty="(BorderBrush).(SolidColorBrush.Color)"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState Name="CalendarButtonUnfocused"/>
                            </VisualStateGroup>
                            <VisualStateGroup Name="ActiveStates">
                                <VisualState Name="Active" />
                                <VisualState Name="Inactive">
                                    <Storyboard>
                                        <ColorAnimation 
                                            Duration="0" 
                                            To="{StaticResource ColorFontTer}" 
                                            Storyboard.TargetName="NormalText" 
                                            Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup Name="DayStates">
                                <VisualState Name="RegularDay" />
                                <VisualState Name="Today">
                                    <Storyboard>
                                        <ColorAnimation Duration="0"
                                                        To="{StaticResource ColorSecondaryAux2}"
                                                        Storyboard.TargetName="TodayBackground"
                                                        Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)"/>
                                        <ColorAnimation Duration="0" 
                                                        To="{StaticResource ColorFontMain}" 
                                                        Storyboard.TargetName="NormalText" 
                                                        Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup Name="BlackoutDayStates">
                                <VisualState Name="NormalDay" />
                                <VisualState Name="BlackoutDay">
                                    <Storyboard>
                                        <ColorAnimation Duration="0"
                                                        To="{StaticResource ColorSecondaryAux3}"
                                                        Storyboard.TargetName="Blackout"
                                                        Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Border x:Name="TodayBackground" CornerRadius="{StaticResource CornerRadiusSmall}" Background="{TemplateBinding Background}"/>
                        <Border x:Name="SelectedBackground" CornerRadius="{StaticResource CornerRadiusSmall}" Background="{TemplateBinding Background}"/>
                        <Border Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}"/>
                        <Border x:Name="HighlightBackground" CornerRadius="{StaticResource CornerRadiusSmall}" Background="{TemplateBinding Background}"/>
                        <ContentPresenter x:Name="NormalText"  Margin="5 1 5 1" TextBlock.Foreground="{TemplateBinding Foreground}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        <Path x:Name="Blackout" Margin="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" RenderTransformOrigin="0.5 0.5" 
                              Fill="{StaticResource BrushTransparentMain}" Stretch="Fill" Data="M8.1772461,11.029181 L10.433105,
                                                                                                 11.029181 L11.700684,12.801641 L12.973633,
                                                                                                 11.029181 L15.191895,11.029181 L12.844727,
                                                                                                 13.999395 L15.21875,17.060919 L12.962891,
                                                                                                 17.060919 L11.673828,15.256231 L10.352539,
                                                                                                 17.060919 L8.1396484,17.060919 L10.519043,
                                                                                                 14.042364z"/>
                        <Border x:Name="DayButtonFocusVisual" IsHitTestVisible="False" CornerRadius="{StaticResource CornerRadiusSmall}" 
                                BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="MMSCalendarButton" TargetType="{x:Type CalendarButton}">
        <Setter Property="MinWidth" Value="40"/>
        <Setter Property="MinHeight" Value="42"/>
        <Setter Property="FontSize" Value="{StaticResource Small}"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource BrushTransparentMain}"/>
        <Setter Property="Background" Value="{StaticResource BrushTransparentMain}"/>
        <Setter Property="Foreground" Value="{StaticResource BrushFontAux}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CalendarButton}">
                    <Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup Name="CommonStates">
                                <VisualState Name="Normal">
                                    <Storyboard>
                                        <ColorAnimation Duration="{StaticResource DurationFadeOut}"
                                                        To="{TemplateBinding Background}"
                                                        Storyboard.TargetName="Background" 
                                                        Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)"/>
                                        <ColorAnimation Duration="{StaticResource DurationFadeOut}"
                                                        To="{TemplateBinding Foreground}"
                                                        Storyboard.TargetName="NormalText" 
                                                        Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState Name="MouseOver">
                                    <Storyboard>
                                        <ColorAnimation Duration="{StaticResource DurationFadeIn}"
                                                        To="{StaticResource ColorSecondaryAux4}"
                                                        Storyboard.TargetName="Background" 
                                                        Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)"/>
                                        <ColorAnimation Duration="{StaticResource DurationFadeIn}"
                                                        To="{StaticResource ColorFontMain}"
                                                        Storyboard.TargetName="NormalText" 
                                                        Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState Name="Pressed"/>
                            </VisualStateGroup>
                            <VisualStateGroup Name="SelectionStates">
                                <VisualState Name="Unselected"/>
                                <VisualState Name="Selected">
                                    <Storyboard>
                                        <ColorAnimation Duration="0" 
                                                        To="{StaticResource ColorSecondaryAux4}"
                                                        Storyboard.TargetName="CalendarButtonFocusVisual" 
                                                        Storyboard.TargetProperty="(BorderBrush).(SolidColorBrush.Color)"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup Name="ActiveStates">
                                <VisualState Name="Active"/>
                                <VisualState Name="Inactive">
                                    <Storyboard>
                                        <ColorAnimation Duration="0" 
                                                        To="{StaticResource ColorFontTer}" 
                                                        Storyboard.TargetName="NormalText" 
                                                        Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup Name="CalendarButtonFocusStates">
                                <VisualState Name="CalendarButtonFocused">
                                    <Storyboard>
                                        <ColorAnimation Duration="0" 
                                                        To="{StaticResource ColorSecondaryAux4}"
                                                        Storyboard.TargetName="CalendarButtonFocusVisual" 
                                                        Storyboard.TargetProperty="(BorderBrush).(SolidColorBrush.Color)"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState Name="CalendarButtonUnfocused"/>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Border x:Name="Background" CornerRadius="{StaticResource CornerRadiusSmall}" Background="{TemplateBinding Background}"/>
                        <ContentPresenter x:Name="NormalText" Margin="1 0 1 1" TextBlock.Foreground="{TemplateBinding Foreground}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        <Border x:Name="CalendarButtonFocusVisual" IsHitTestVisible="False" CornerRadius="{StaticResource CornerRadiusSmall}" 
                                BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <ControlTemplate x:Key="PreviousButtonTemplate" TargetType="{x:Type Button}">
        <Border x:Name="Border" TextBlock.Foreground="{TemplateBinding Foreground}" CornerRadius="{StaticResource CornerRadiusSmall}" 
                Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal">
                        <Storyboard>
                            <ColorAnimation Duration="{StaticResource DurationFadeOut}" 
                                            To="{TemplateBinding Background}" 
                                            Storyboard.TargetName="Border" 
                                            Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)"/>
                            <ColorAnimation Duration="{StaticResource DurationFadeOut}" 
                                            To="{TemplateBinding Foreground}" 
                                            Storyboard.TargetName="Path" 
                                            Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"/>
                            <ColorAnimation Duration="{StaticResource DurationFadeOut}" 
                                            To="{TemplateBinding Foreground}" 
                                            Storyboard.TargetName="Path" 
                                            Storyboard.TargetProperty="(Shape.Stroke).(SolidColorBrush.Color)"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <ColorAnimation Duration="{StaticResource DurationFadeIn}" 
                                            To="{StaticResource ColorSecondaryAux4}" 
                                            Storyboard.TargetName="Border" 
                                            Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)"/>
                            <ColorAnimation Duration="{StaticResource DurationFadeIn}" 
                                            To="{StaticResource ColorFontMain}" 
                                            Storyboard.TargetName="Path" 
                                            Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"/>
                            <ColorAnimation Duration="{StaticResource DurationFadeIn}" 
                                            To="{StaticResource ColorFontMain}" 
                                            Storyboard.TargetName="Path" 
                                            Storyboard.TargetProperty="(Shape.Stroke).(SolidColorBrush.Color)"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <ColorAnimation Duration="0" 
                                            To="{StaticResource ColorSecondaryAux2}" 
                                            Storyboard.TargetName="Border" 
                                            Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <Storyboard>
                            <ColorAnimation Duration="0" 
                                            To="{StaticResource ColorTransparentMain}" 
                                            Storyboard.TargetName="Border" 
                                            Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)"/>
                            <ColorAnimation Duration="0" 
                                            To="{StaticResource ColorDisabledMain}" 
                                            Storyboard.TargetName="Path" 
                                            Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"/>
                            <ColorAnimation Duration="0" 
                                            To="{StaticResource ColorDisabledMain}" 
                                            Storyboard.TargetName="Path" 
                                            Storyboard.TargetProperty="(Shape.Stroke).(SolidColorBrush.Color)"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Path x:Name="Path" Margin="0 0 0 0" Stretch="Uniform" Height="10" Width="6" HorizontalAlignment="Center" VerticalAlignment="Center" StrokeThickness="0.5"
                  Data="M15.41,16.58L10.83,12L15.41,7.41L14,6L8,12L14,18L15.41,16.58Z" Fill="{TemplateBinding Foreground}" Stroke="{TemplateBinding Foreground}">
            </Path>
        </Border>
    </ControlTemplate>

